<template id="popup-template">
  <article
    class="card relative w-80 overflow-hidden rounded-2xl border border-gray-200 bg-white shadow-xl transition-all hover:shadow-2xl dark:border-zinc-800 dark:bg-zinc-900"
  >
    <header class="h-32 w-full p-6 dark:bg-emerald-800 bg-teal-500">
      <h3 class="card-team-name">Dummy Team</h3>
      <p class="card-team-number">00000</p>
    </header>
    <div class="card-body grid grid-cols-2 gap-4 m-6">
      <div>
        <p
          class="card-left-label text-[11px] font-bold uppercase tracking-wider text-gray-500 dark:text-zinc-500"
        >
          Left Label
        </p>
        <p
          class="card-left-value text-sm font-semibold text-gray-800 dark:text-zinc-200"
        >
          Left Value
        </p>
      </div>
      <div class="text-right">
        <p
          class="card-right-label text-[11px] font-bold uppercase tracking-wider text-gray-500 dark:text-zinc-500"
        >
          Right Label
        </p>
        <p
          class="card-right-value text-sm font-semibold text-gray-800 dark:text-zinc-200"
        >
          Right Value
        </p>
      </div>
    </div>
    <footer>
      <a
        class="card-view-details flex justify-center items-center gap-2 dark:bg-emerald-800 bg-teal-500 m-6 mb-6 rounded-full px-4 py-2 text-center text-sm font-semibold text-white hover:opacity-90 transition-opacity hover:no-underline"
        href="#"
      >
        VIEW DETAILS
        <svg
          xmlns="http://www.w3.org/2000/svg"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
          class="h-3.5"
          ><path d="M5 12h14"></path><path d="m12 5 7 7-7 7"></path></svg
        >
      </a>
    </footer>
  </article>
</template>
